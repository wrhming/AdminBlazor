@page "/"
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize]

<PageContainer Title="Welcome">
    <AuthorizeView>
        <Authorized>
            <h1>Hello,@context.User.Identity.Name</h1>
        </Authorized>
        <NotAuthorized>
            <h1>Hello,Guest!</h1>
        </NotAuthorized>
    </AuthorizeView>
</PageContainer>
